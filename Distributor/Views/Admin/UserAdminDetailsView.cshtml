@model Distributor.ViewModels.UserAdminDetailsView
@using Distributor.Helpers

@{ 
    var appUserId = Model.AppUserId;
}

@Html.HiddenFor(modelItem => Model.AppUserId)

<tr>
    <td>@Html.DisplayFor(modelItem => Model.FirstName)</td>
    <td>@Html.DisplayFor(modelItem => Model.LastName)</td>
    <td>@Html.DisplayFor(modelItem => Model.LoginEmail)</td>
    <td>@Html.EnumDropDownListFor(modelItem => Model.PrivacyLevel, new { @class = "form-control" })</td>
    <td>@Html.EnumDropDownListFor(modelItem => Model.UserRole, new { @class = "form-control" })</td>
    <td>@Html.DropDownListFor(modelItem => Model.EntityStatus, ControlHelpers.EntityStatusEnumsForUsersDropDown(Model.EntityStatus), new { @class = "form-control" })</td>
</tr>
