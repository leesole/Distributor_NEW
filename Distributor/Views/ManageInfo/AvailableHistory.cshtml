@model IList<Distributor.ViewModels.AvailableListingManageHistoryViewModel>

@{ 
    //set up the breadcrumb trail so that this can be passed to the details screen for building it's own breadcrumb as the detail screen is called from multiple places
    string breadcrumb = "Available,Available,ManageInfo" ;
    string callingActionDisplayName = "History";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">Manage Listings <small>Available - History</small></h1>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Available", "Available", "ManageInfo")
            </li>
            <li class="active">History</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-green">
            <div class="panel-heading">Your historical available listings</div>
            <div class="panel-body">
                <table style="width:100%;" class="table table-striped table-bordered table-hover" id="availableHistoryTable">
                    <thead>
                        <tr class="primary">
                            <th>Description</th>
                            <th>Type</th>
                            <th>Initial Qty</th>
                            <th>Qty Left</th>
                            <th>UoM</th>
                            <th>Condition</th>
                            <th>Last Updated</th>
                            <th>Status</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            var listingId = Model[i].ListingId;

                            <tr>
                                @Html.HiddenFor(modelItem => Model[i].ListingId)
                                <td onclick="location.href='@Url.Action("DisplayAvailable", "ManageInfo", new { id = listingId, breadcrumb = breadcrumb, callingActionDisplayName = callingActionDisplayName })'">@Html.DisplayFor(modelItem => Model[i].ItemDescription)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].ItemType)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].QuantityAvailable)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].QuantityOutstanding)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].UoM)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].ItemCondition)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].RecordChangeOn)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].ListingStatus)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        //Render tables
        $(document).ready(function () {
            $('#availableHistoryTable').dataTable({
                responsive: true
            });
        });

    </script>
}