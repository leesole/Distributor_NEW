@model IList<Distributor.ViewModels.AvailableListingManageViewModel>


<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">Manage Listings <small>Available</small></h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-green">
            <div class="panel-heading">Your current available listings</div>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="availableTable">
                    <thead>
                        <tr class="primary">
                            <th>Description</th>
                            <th>Type</th>
                            <th>Qty Left</th>
                            <th>UoM</th>
                            <th>Available To</th>
                            <th>Condition</th>
                            <th>Expiry Date</th>
                            <th>Delivery</th>
                            <th>Status</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            var listingId = Model[i].ListingId;
                            @Html.HiddenFor(modelItem => Model[i].ListingId)

                            <tr>
                                <td>@Html.DisplayFor(modelItem => Model[i].ItemDescription)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].ItemType)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].QuantityOutstanding)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].UoM)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].AvailableTo)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].ItemCondition)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].ExpiryDate)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].DeliveryAvailable)</td>
                                <td>@Html.DisplayFor(modelItem => Model[i].ListingStatus)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer clearfix">
                <a class="btn btn-default btn-lg btn-block" href='@Url.Action("AvailableHistory", "ManageInfo")'>View History</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        //Render tables
        $(document).ready(function () {
            $('#availableTable').dataTable({
                responsive: true
            });
        });

    </script>
}