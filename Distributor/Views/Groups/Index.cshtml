@using Distributor.Helpers
@model Distributor.ViewModels.GroupIndexViewModel


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Groups</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">Your current groups</div>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="groupsByOrgTable">
                    <thead>
                        <tr class="primary">
                            <th>Name</th>
                            <th>Visibility</th>
                            <th>Invite</th>
                            <th>Acceptance</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.GroupsCreatedByOrg.Count; i++)
                        {
                            var groupId = @Model.GroupsCreatedByOrg[i].GroupId;

                            <tr id=@Model.GroupsCreatedByOrg[i].GroupId>
                                <td onclick="location.href='@Url.Action("Details", "Groups", new { id = Model.GroupsCreatedByOrg[i].GroupId })'">@Html.DisplayFor(modelItem => Model.GroupsCreatedByOrg[i].Name)</td>
                                <td onclick="location.href='@Url.Action("Details", "Groups", new { id = Model.GroupsCreatedByOrg[i].GroupId })'">@Model.GroupsCreatedByOrg[i].VisibilityLevel.DisplayName()</td>
                                <td onclick="location.href='@Url.Action("Details", "Groups", new { id = Model.GroupsCreatedByOrg[i].GroupId })'">@Model.GroupsCreatedByOrg[i].InviteLevel.DisplayName()</td>
                                <td onclick="location.href='@Url.Action("Details", "Groups", new { id = Model.GroupsCreatedByOrg[i].GroupId })'">@Model.GroupsCreatedByOrg[i].AcceptanceLevel.DisplayName()</td>
                                <td><button type="submit" class="btn btn-xs btn-success btn-block"><span class="glyphicon glyphicon-user"></span></button></td>
                                <td><button type="submit" class="btn btn-xs btn-danger btn-block"><span class="glyphicon glyphicon-remove" onclick="removeGroup(@groupId)"></span></button></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <div class="panel-footer">
                <a class="btn btn-success btn-lg btn-block" href='@Url.Action("Create", "Groups")'>Add Group</a>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">Groups you are a member of</div>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="groupsContainingOrgTable">
                    <thead>
                        <tr class="primary">
                            <th>Name</th>
                            <th>Owner</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.GroupsContainingOrg.Count; i++)
                        {
                            <tr id=@Model.GroupsContainingOrg[i].GroupId>
                                <td onclick="location.href='@Url.Action("Details", "Groups", new { id = Model.GroupsContainingOrg[i].GroupId })'">@Html.DisplayFor(modelItem => Model.GroupsContainingOrg[i].Name)</td>
                                <td onclick="location.href='@Url.Action("Details", "Groups", new { id = Model.GroupsContainingOrg[i].GroupId })'">@Html.DisplayFor(modelItem => Model.GroupsContainingOrg[i].GroupOriginatorOrganisation.OrganisationName)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        //Render tables
        $(document).ready(function () {
            $('#groupsByOrgTable').dataTable({
                'columns': [
                    null,
                    null,
                    null,
                    null,
                    { 'orderable': false },
                    { 'orderable': false }
                ],
                responsive: true
            });
        });

        $(document).ready(function () {
            $('#groupsContainingOrgTable').dataTable({
                responsive: true
            });
        });

        function removeGroup(id) {
            alert(id);
            if (window.confirm("Proceed?")) {
                var url = "/Data/RemoveBlock";

                $.ajax({
                    url: url,
                    data: { blockId: id },
                    cache: false,
                    type: "POST",
                    success: function (result) {
                        location.reload(true);
                    }
                });
            }
        }

    </script>
}
